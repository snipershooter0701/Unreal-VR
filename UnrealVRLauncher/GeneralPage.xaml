<Page
    x:Class="UnrealVRLauncher.GeneralPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer Style="{StaticResource Page.ScrollViewer}">
        <StackPanel Style="{StaticResource Page.Body}">
            <CommandBar DefaultLabelPosition="Right" VerticalContentAlignment="Center">
                <CommandBar.Content>
                    <StackPanel>
                        <ComboBox>
                            <ComboBoxItem Content="Ghostrunner"/>
                        </ComboBox>
                    </StackPanel>
                </CommandBar.Content>
                <AppBarButton Icon="Play" Label="Launch"/>
                <AppBarButton Icon="Stop" Label="Exit" IsEnabled="False"/>
            </CommandBar>
        </StackPanel>
    </ScrollViewer>
</Page>