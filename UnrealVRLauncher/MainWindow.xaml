<Window
    x:Class="UnrealVRLauncher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d">
    <NavigationView IsSettingsVisible="False"
                    IsBackButtonVisible="Collapsed"
                    ItemInvoked="NavigationView_ItemInvoked"
                    Header="General">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="General" Icon="Setting" x:Name="GeneralItem"/>
            <NavigationViewItem Content="Profile" Icon="Save" x:Name="ProfileItem"/>
        </NavigationView.MenuItems>
        <NavigationView.FooterMenuItems>
            <NavigationViewItem Content="About" Icon="Globe" x:Name="AboutItem"/>
        </NavigationView.FooterMenuItems>
        <Frame x:Name="ContentFrame"/>
    </NavigationView>
</Window>
